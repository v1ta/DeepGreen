<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.defritza.chess"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.defritza.app.GameSelect"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.defritza.app.Game"
            android:label="@string/title_activity_game_play" >
        </activity>
        <activity
            android:name="com.defritza.app.HistorySelect"
            android:label="@string/title_activity_history_selection" >
        </activity>
        <activity
            android:name="com.defritza.app.RemoteSetup"
            android:label="@string/title_activity_remote_setup" >
        </activity>
    </application>

</manifest>